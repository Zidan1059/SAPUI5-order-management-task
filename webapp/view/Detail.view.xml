    </f:Form>
    <FlexBox alignItems="Center" id="app_submit" direction="Column" width="100%">
        <Button id="app_submit_btn" text="{i18n>update}" press="onUpdatePressed" visible="{editModel>/editmode}" />
        <Button id="app_new_btn" text="{i18n>submit}" press="onSubmitPressed" visible="{oSaveModel>/saveMode}" />
    </FlexBox>


